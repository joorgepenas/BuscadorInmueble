@model BuscadorInmueble.Models.Usuario
@{
    Layout = "~/Views/Compartir/Plantilla.cshtml";
}


<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">

<div class="testbox">
    <h1><b>Formulario de Registro</b></h1>

    <form action="~/usuario/ProcesarUsuario" method="post">

        <div class="fila">
            <label>Nombre</label>
            @Html.TextBoxFor(u => u.nombre)
            <label>Apellido Paterno</label>
            @Html.TextBoxFor(u => u.apePat)
            <label>Apellido Materno</label>
            @Html.TextBoxFor(u => u.apeMat)
            <label>E-mail</label>
            @Html.TextBoxFor(u => u.email)
            <label>Telefono</label>
            @Html.TextBoxFor(u => u.Telefono)
            <label>Celular</label>
            @Html.TextBoxFor(u => u.celular)
            <label>Usuario</label>
            @Html.TextBoxFor(u => u.usuario1)
            <label>Contraseña</label>
            @Html.TextBoxFor(u => u.clave)
        </div>

        <button style="height:40px; width:120px;cursor:pointer;">Registrar</button>
    </form>
</div>

<style type="text/css">
    fieldset, img {
        border: 0
    }

    ol, ul, li {
        list-style: none
    }

    :focus {
        outline: none
    }


