    }

    input[type=password] {
        margin-bottom: 25px;
    }

    .gender {
        margin-left: 30px;
        margin-bottom: 30px;
    }



    button {
        font-size: 14px;
        font-weight: 600;
        color: white;
        padding: 6px 25px 0px 20px;
        margin: 10px 8px 20px 0px;
        float: right;
